<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.ProfilePage"
             Title="Profile"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodel="clr-namespace:Frontend.ViewModels" 
             x:DataType="viewmodel:ProfileViewModel"
             x:Name="ProfileView"
             >
    <ContentPage.BindingContext>
        <viewmodel:ProfileViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <ScrollView>
                    <StackLayout Margin="15,30,15,15">
                        <StackLayout Orientation="Horizontal">
                            <Frame
                            Margin="0"
                            Padding="0"
                            BackgroundColor="Transparent"
                            HeightRequest="120"
                            CornerRadius="60"
                            WidthRequest="120">
                                <Image
                                Aspect="AspectFit"
                                HeightRequest="120"
                                Source="{Binding user.Logo}"
                                WidthRequest="120" />
                            </Frame>
                            <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
                                <Label
                                FontAttributes="Bold"
                                FontSize="26"
                                HorizontalOptions="CenterAndExpand"
                                Text="{Binding Name}"
                                TextColor="Black"
                                VerticalTextAlignment="Center">
                                    <Label.FontFamily>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="Android" Value="SFPro.ttf#Bold" />
                                        </OnPlatform>
                                    </Label.FontFamily>
                                </Label>

                                <Label
                                FontSize="15"
                                HorizontalOptions="CenterAndExpand"
                                Text="{Binding user.Telephone}"
                                TextColor="Black"
                                VerticalTextAlignment="Center">
                                    <Label.FontFamily>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="Android" Value="SFPro.ttf#Bold" />
                                        </OnPlatform>
                                    </Label.FontFamily>
                                </Label>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout Margin="10,30,0,0">

                            <!--  Chỉnh sửa thông tin  -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_edit.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Chỉnh sửa thông tin"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->

                           

                            <!--  Start of Menu Item  -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_address.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Địa chỉ giao hàng"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->


                            <!-- Lịch sử đơn hàng -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_history.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Lịch sử đơn hàng"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->

                            <!--  Đơn hàng đang vận chuyển  -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_TrackOrder.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Đơn hàng đang vận chuyển"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->
                            
                            <!--  Đổi mật khẩu -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="icon_password"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Đổi mật khẩu"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_5" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->

                            <!--  Cài đặt  -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_setting.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Cài đặt"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_4" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->

                            <!--  Đăng xuất  -->
                            <StackLayout Margin="0,5,5,5">

                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <Image
                                        Aspect="AspectFill"
                                        HeightRequest="30"
                                        HorizontalOptions="StartAndExpand"
                                        Source="Icon_logout.png"
                                        WidthRequest="30" />
                                        <Label
                                        Margin="15,0,0,0"
                                        FontSize="18"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Start"
                                        Text="Đăng xuất"
                                        TextColor="Black"
                                        VerticalTextAlignment="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>

                                    <Image
                                    Margin="20,0,20,0"
                                    Aspect="AspectFit"
                                    HeightRequest="10"
                                    HorizontalOptions="EndAndExpand"
                                    Source="more"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="10" />

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Button_Clicked" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </StackLayout>
                            <!--  End of Menu Item  -->

                        </StackLayout>

                    </StackLayout>
                </ScrollView>

          
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>